@model IEnumerable<KodiSoft_task_Gapunich.Products>
@using KodiSoft_task_Gapunich.Controllers

@{
    ViewBag.Title = "ProductList";
}

<h2 class="downhomemenu text-justify" >Меню</h2>
<div class="container-fluid">


    @foreach (var group in Model.GroupBy(price => price.Typeproducts.Name))
    {


        <h4><p style="text-align: center">@group.Key</p></h4>


        foreach (Products product in group)
        {
            <ul>
                <ol>
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <img class="small_img img-rounded zoom" src="@Url.Content(string.Format("~/Content/Images/{0}.jpg", product.Id))"/>

                        </div>
                        <div class="col-md-8">
                            <span><b>Наименование:</b> @Html.DisplayFor(modelItem => product.Name)</span>
                            <br><span><b>Цена:</b> @Html.DisplayFor(modelItem => product.Price) </span>
                            <br>@Html.DisplayTextFor(modelItem => product.Description)
                        </div>
                    </div>
                </ol>
            </ul>
        }
    }


</div>
